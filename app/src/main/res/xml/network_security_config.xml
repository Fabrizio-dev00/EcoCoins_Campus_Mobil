<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ⭐ Configuración base: Confía en certificados del sistema -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            ertificates src="system" />
            ertificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- ⭐ Debug: En modo debug, confía en todo -->
    <debug-overrides>
        <trust-anchors>
            ertificates src="system" />
            ertificates src="user" />
        </trust-anchors>
    </debug-overrides>

    <!-- ⭐ Tu servidor local -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.37</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>
